<p id="notice"><%= notice %></p>

<h1>イベント一覧</h1>

<table>
  <thead>
    <tr>
      <th>イベント名</th>
      <th>開始日時</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.starts_at %></td>
        <td><%= link_to '見る', event %></td>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '削除する', event, method: :delete, data: { confirm: '削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいイベント', new_event_path %>
